        <script>
            function generateDatabaseDateTime(futureDate) {
                return futureDate.toString().substring(0, 24)
            }



            var minutesToAdd = 330;
            var currentDate = new Date();
            var futureDate = new Date(currentDate.getTime() + minutesToAdd * 60000)
            document.getElementById('time').innerHTML = generateDatabaseDateTime(futureDate);

